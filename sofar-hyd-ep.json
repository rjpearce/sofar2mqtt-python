			"function": "int",
			"signed": true,
			"passive": true,
			"min": -999999,
			"max": 999999,
			"write": true,
			"aggregate": [
				"minimum_battery_power",
				"maximum_battery_power"
			],
			"agg_function": "avg",
			"ha": {
				"command_topic": "sofar/rw/desired_power",
				"entity_category": "config",
				"name": "Desired Power",
